<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_sync"
        android:layout_width="371dp"
        android:layout_height="45dp"
        android:text="Synchronous"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/btn_asyncTask"
        android:layout_width="371dp"
        android:layout_height="45dp"
        android:text="AsyncTask"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sync" />

    <Button
        android:id="@+id/btn_rxKotlin"
        android:layout_width="371dp"
        android:layout_height="45dp"
        android:text="RxKotlin"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_asyncTask" />

    <Button
        android:id="@+id/btn_coroutine"
        android:layout_width="371dp"
        android:layout_height="45dp"
        android:text="Coroutine"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_rxKotlin" />

    <Button
        android:id="@+id/btn_drinking"
        android:layout_width="371dp"
        android:layout_height="45dp"
        android:text="Drinking Water"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_coroutine" />

    <TextView
        android:id="@+id/txt_log"
        android:layout_width="359dp"
        android:layout_height="430dp"
        android:paddingStart="20dp"
        android:scrollbars="vertical"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_blink" />


</androidx.constraintlayout.widget.ConstraintLayout>